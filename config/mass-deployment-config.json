  "logging": {
    "enabled": true,
    "level": "info",
    "max_file_size": "10MB",
    "max_files": 10,
    "remote_logging": {
      "enabled": false,
      "endpoint": "",
      "api_key": ""
    },
    "email_notifications": {
      "enabled": false,
      "recipients": [],
      "error_threshold": 5
    }
  },
  "monitoring": {
    "enabled": true,
    "metrics": {
      "performance": true,
      "errors": true,
      "usage": true,
      "security": true
    },
    "alerts": {
      "email": {
        "enabled": false,
        "recipients": []
      },
      "webhook": {
        "enabled": false,
        "url": ""
      }
    }
  },
  "backup": {
    "enabled": true,
    "frequency": "weekly",
    "retention": 30,
    "include": {
      "settings": true,
      "database": true,
      "files": false
    },
    "storage": {
      "local": true,
      "remote": {
        "enabled": false,
        "provider": "",
        "credentials": {}
      }
    }
  },
  "security": {
    "api_rate_limiting": {
      "enabled": true,
      "requests_per_minute": 60
    },
    "ip_whitelist": {
      "enabled": false,
      "ips": []
    },
    "encryption": {
      "sensitive_data": true,
      "algorithm": "AES-256-CBC"
    }
  },
  "api": {
    "version": "v1",
    "base_url": "/wp-json/wpcw/v1",
    "authentication": {
      "required": true,
      "method": "jwt"
    },
    "endpoints": {
      "status": "/status",
      "config": "/config",
      "install": "/install",
      "optimize": "/optimize",
      "backup": "/backup",
      "logs": "/logs"
    }
  },
  "wp_cli": {
    "commands": {
      "install": "wp wpcw install",
      "configure": "wp wpcw configure",
      "optimize": "wp wpcw optimize",
      "backup": "wp wpcw backup",
      "status": "wp wpcw status",
      "logs": "wp wpcw logs"
    }
  },
  "requirements": {
    "php": {
      "min_version": "7.4",
      "recommended_version": "8.0",
      "extensions": [
        "curl",
        "json",
        "mbstring",
        "openssl",
        "zip"
      ]
    },
    "wordpress": {
      "min_version": "5.0",
      "recommended_version": "6.0"
    },
    "memory": {
      "min_limit": "128M",
      "recommended_limit": "256M"
    },
    "permissions": {
      "wp_content": "755",
      "plugins": "755",
      "uploads": "755"
    }
  },
  "troubleshooting": {
    "common_issues": {
      "plugin_activation_failed": {
        "description": "El plugin no se puede activar",
        "solutions": [
          "Verificar permisos de archivos",
          "Comprobar versión de PHP",
          "Revisar logs de errores",
          "Desactivar otros plugins conflictivos"
        ]
      },
      "configuration_not_applied": {
        "description": "La configuración no se aplica correctamente",
        "solutions": [
          "Limpiar caché del sitio",
          "Verificar permisos de base de datos",
          "Comprobar configuración regional",
          "Revisar logs del plugin"
        ]
      },
      "performance_issues": {
        "description": "El sitio funciona lento después de la instalación",
        "solutions": [
          "Ajustar nivel de optimización",
          "Verificar configuración de caché",
          "Optimizar base de datos",
          "Revisar uso de memoria"
        ]
      }
    }
  }
